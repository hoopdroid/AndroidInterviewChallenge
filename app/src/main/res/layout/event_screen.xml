<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="event"
            type="com.excelsior.codechallenge.eventScreen.ui.EventItemVO" />

        <variable
            name="viewModel"
            type="com.excelsior.codechallenge.eventScreen.ui.EventScreenViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size2x"
                android:layout_marginVertical="@dimen/size1x"
                android:text="@{event.name}"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/lorem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size2x"
                android:layout_marginVertical="@dimen/size2x"
                android:drawableStart="@drawable/ic_baseline_today_24"
                android:drawablePadding="4dp"
                android:text="@{event.formattedDate}"
                android:textSize="18sp"
                app:drawableTint="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                tools:text="@tools:sample/lorem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size2x"
                android:layout_marginVertical="@dimen/size2x"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="4dp"
                android:text="@{event.phone}"
                android:textSize="18sp"
                app:drawableTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date"
                tools:text="@tools:sample/lorem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size2x"
                android:layout_marginVertical="@dimen/size2x"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="4dp"
                android:text="@{event.address}"
                android:textSize="18sp"
                app:drawableTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone"
                tools:text="@tools:sample/lorem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size2x"
                android:layout_marginVertical="@dimen/size2x"
                android:drawablePadding="4dp"
                android:text="@{event.description}"
                android:textSize="14sp"
                app:drawableTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginHorizontal="@dimen/size1x"
                android:layout_marginVertical="@dimen/size2x"
                android:backgroundTint="@color/green"
                android:drawableEnd="@drawable/ic_baseline_attach_money_24"
                android:text="@{String.valueOf(event.price)}"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:drawableTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Buy 123" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>